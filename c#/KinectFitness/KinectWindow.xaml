<Page x:Class="KinectFitness.KinectWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="Kinect Window" Loaded="Page_Loaded" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" d:DesignHeight="800" d:DesignWidth="1300" Background="Black">

    <Grid Height="800" Width="1300">
        <MediaElement Height="586" HorizontalAlignment="Left" Margin="28,46,0,0" Name="MediaPlayer" VerticalAlignment="Top" Width="827" UnloadedBehavior="Manual" />
        <Canvas Margin="0">
            <Button Canvas.Left="382" Canvas.Top="638" Content="Play" Height="33" Name="btnPlay" Width="112" Background="#FF1CB841" BorderBrush="White" Click="btnPlay_Click" Foreground="White" FontSize="16" FontWeight="Bold" />
            <Border BorderBrush="Silver" BorderThickness="1" Height="240" Name="border1" Width="320" Canvas.Left="977" Canvas.Top="249"></Border>
            <my:KinectSkeletonViewer Name="kinectSkeletonViewer1" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" Unloaded="kinectSkeletonViewer1_Unloaded" Canvas.Left="977" Canvas.Top="249" />
            <Image Canvas.Left="978" Canvas.Top="6" Height="232" Name="Doctor" Stretch="Fill" Width="316" Source="/KinectFitness;component/no-avatar.jpg" />
            <my:KinectSensorChooser Name="kinectSensorChooser1" Width="276" Height="204" Canvas.Left="1000" Canvas.Top="269" />
            <Image Canvas.Left="104" Canvas.Top="6" Height="50" Name="rightHand" Stretch="Fill" Width="56" Source="/KinectFitness;component/right%20hand.png" />
            <Image Canvas.Left="28" Canvas.Top="0" Height="68" Name="leftHand" Stretch="Fill" Width="70" Source="/KinectFitness;component/left%20hand.png" />
            <Button Canvas.Left="895" Canvas.Top="319" Content="Camera Up" Height="24" Name="btnUp" Click="motorUp_Click" Width="81" Background="#FF1CB841" Foreground="White" BorderBrush="#FF1CB841" />
            <Button Canvas.Left="895" Canvas.Top="369" Content="Camera Down" Height="24" Name="btnDown" Click="motorDown_Click" Width="81" Background="#FF1CB841" Foreground="White" BorderBrush="#FF1CB841" />
            <ProgressBar Canvas.Left="977" Canvas.Top="580" Height="52" Name="pointsBar" Width="316" Value="80" Background="Black" BorderBrush="{x:Null}" Foreground="Red" OpacityMask="{x:Null}" Visibility="Visible" />
            <TextBlock Canvas.Left="978" Canvas.Top="494" Height="80" Name="points" Text="0 Pts." Width="316" Foreground="White" FontSize="64" FontFamily="Corbel" />
        </Canvas>
    </Grid>
</Page>
