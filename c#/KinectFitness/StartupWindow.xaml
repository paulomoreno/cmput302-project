<Page x:Class="KinectFitness.StartupWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Title="Kinect Fitness" Height="800" Width="1000">

    <Grid Margin="10,0,10,10" Background="Gray">
        <Image Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="51,212,0,0" Name="playButton" Stretch="Fill" VerticalAlignment="Top" Width="172" Source="/KinectFitness;component/playbutton.png" OpacityMask="#E67993EA" />
        <Image Height="164" HorizontalAlignment="Left" Margin="274,212,0,0" Name="optionsButton" Stretch="Fill" VerticalAlignment="Top" Width="172" Source="/KinectFitness;component/optionsbutton.png" Grid.Row="1" />
        <Image Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="513,212,0,0" Name="tutorialbutton" Stretch="Fill" VerticalAlignment="Top" Width="172" Source="/KinectFitness;component/tutorialbutton.png" />
        <Image Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="751,212,0,0" Name="quitbutton" Stretch="Fill" VerticalAlignment="Top" Width="172" Source="/KinectFitness;component/quitbutton.png" />
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="51,212,0,0" Name="playborder" VerticalAlignment="Top" Width="172" Background="{x:Null}" OpacityMask="White" Opacity="0" />
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="274,212,0,0" Name="optionsborder" VerticalAlignment="Top" Width="172" Background="{x:Null}" OpacityMask="White" Opacity="0" />
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="513,212,0,0" Name="tutorialborder" VerticalAlignment="Top" Width="172" Background="{x:Null}" OpacityMask="White" Opacity="0" />
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Height="164" HorizontalAlignment="Left" Margin="751,212,0,0" Name="quitborder" VerticalAlignment="Top" Width="172" Background="{x:Null}" OpacityMask="White" Opacity="0" />
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
